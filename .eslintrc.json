{
  "extends": ["react-app", "react-app/jest"],
  "plugins": ["react"],  // ✅ Removed "jest" since it's already included
  "settings": {
    "react": {
      "version": "detect"  // ✅ Automatically detect React version
    }
  },
  "rules": {
    "react/react-in-jsx-scope": "off"
  },
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true  // ✅ Kept "jest" here so the Jest environment is still recognized
  }
}
